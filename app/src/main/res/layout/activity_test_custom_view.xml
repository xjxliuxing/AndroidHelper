<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xjx.helper.test.TestCustomViewActivity">

    <com.xjx.helper.widget.custom.TestCustomView
        android:id="@+id/sssss"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray_10"
            android:tag="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是Top的子View"
                android:textColor="@color/gray_10" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:tag="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是bottom的子View"
                android:textColor="@color/gray_10" />

            <TextView
                android:id="@+id/ssssssssw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是bottom的子View"
                android:textColor="@color/gray_10" />

        </LinearLayout>

    </com.xjx.helper.widget.custom.TestCustomView>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sssss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

</RelativeLayout>