<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xjx.helper.ui.home.fragments.TodoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            style="@style/style_todo_item"
            android:text="自定义时间选择器" />

        <TextView
            android:id="@+id/tv_2"
            style="@style/style_todo_item"
            android:text="自定义时间选择器2" />

        <TextView
            android:id="@+id/tv_3"
            style="@style/style_todo_item"
            android:text="测试时间转换" />

        <TextView
            android:id="@+id/tv_4"
            style="@style/style_todo_item"
            android:text="Recycleview分割线" />

        <TextView
            android:id="@+id/tv_5"
            style="@style/style_todo_item"
            android:text="下载进度" />

        <TextView
            android:id="@+id/tv_6"
            style="@style/style_todo_item"
            android:text="视频播放器" />

        <TextView
            android:id="@+id/tv_7"
            style="@style/style_todo_item"
            android:text="测试数据" />

        <TextView
            android:id="@+id/tv_8"
            style="@style/style_todo_item"
            android:text="GridLayoutManager" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
