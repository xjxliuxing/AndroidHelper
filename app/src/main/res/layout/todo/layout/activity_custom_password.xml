<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xjx.helper.widget.custom.PassWordView
        android:id="@+id/pd_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_43"
        app:HorizontalSpacing="@dimen/dp_12"
        app:content_color="@color/black_5"
        app:drawable_size="4.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:selector_color="@color/gray_10"
        app:selector_error_color="@color/red_4"
        app:show_input="true"
        app:show_password="true"
        app:size="6"
        app:un_selector_color="@color/gray_12" />

</androidx.constraintlayout.widget.ConstraintLayout>