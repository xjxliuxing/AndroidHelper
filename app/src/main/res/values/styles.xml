<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_todo_item">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/read1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomDialog_Animation">
        <item name="android:windowEnterAnimation">@anim/tranlate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/tranlate_dialog_out</item>
    </style>

</resources>
