<resources>

    <declare-styleable name="TextViewDrawableLeft">
        <attr name="tdl_drawable" format="reference" />
        <attr name="tdl_drawable_width" format="dimension" />
        <attr name="tdl_drawable_height" format="dimension" />
        <attr name="tdl_content" format="string" />
        <attr name="tdl_color" format="color" />
        <attr name="tdl_size" format="dimension" />
        <attr name="tdl_drawable_padding" format="dimension" />
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--基类dialog的style-->
    <style name="base_dialog" parent="@android:style/Theme.Dialog">
        <!--        <item name="android:windowIsTranslucent">false</item>-->
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

    </style>

    <!--提示dialog的style-->
    <style name="dialog_hint" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MainTextWhiteStyle">
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleWhite">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_todo_item">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/read1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomDialog_Animation">
        <item name="android:windowEnterAnimation">@anim/tranlate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/tranlate_dialog_out</item>
    </style>

    <!--验证阿门输入框-->
    <declare-styleable name="PassWordView">
        <attr name="pd_size" format="integer" /> <!--验证码的个数-->
        <attr name="pd_HorizontalSpacing" format="dimension" /> <!--每个view之间的间隔-->
        <attr name="pd_un_selector_color" format="color" /> <!--没有选中的颜色-->
        <attr name="pd_un_selector_height" format="dimension" /> <!--没有选中的高度-->
        <attr name="pd_selector_color" format="color" /> <!--选中的颜色-->
        <attr name="pd_selector_error_color" format="color" /> <!--选中错误的颜色-->
        <attr name="pd_selector_height" format="dimension" /> <!--选中的高度-->
        <attr name="pd_drawable_color" format="color" /> <!--密文的颜色-->
        <attr name="pd_drawable_size" format="dimension" /> <!--密文的大小-->
        <attr name="pd_content_color" format="color" /> <!--默认内容的颜色-->
        <attr name="pd_content_size" format="dimension" /> <!--默认内容的大小-->
        <attr name="pd_show_input" format="boolean" /><!--是否展示输入框-->
        <attr name="pd_show_password" format="boolean" /> <!--是否显示密码-->

    </declare-styleable>

    <!--滑块的view-->
    <declare-styleable name="SliderView">
        <attr name="hk_drawable" format="reference" /> <!--滑块的图片-->
        <attr name="hk_background" format="color" /> <!--背景的颜色-->
        <attr name="hk_background_Height" format="dimension" /> <!--背景的高度-->
        <attr name="hk_drawable_Height" format="dimension" /> <!--滑块的高度-->
        <attr name="hk_selector_background" format="color" /> <!--背景选中后的颜色-->

    </declare-styleable>

</resources>
